{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "es2020",
    "moduleResolution": "bundler",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "babel.config.cjs",
    "e2e",
    "eslint.config.ts",
    "jest.config.tsx",
    "jest.setup.tsx",
    "playwright.config.ts",
    "postcss.config.ts",
    "prettier.config.js",
    "src",
    "stylelint.config.js",
    "webpack.common.cjs",
    "webpack.dev.cjs",
    "webpack.prod.cjs"
  ]
}
